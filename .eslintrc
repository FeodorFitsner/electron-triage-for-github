{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true
  },
  "root": true,
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "browser": true
  },
  "extends": "airbnb"
}
